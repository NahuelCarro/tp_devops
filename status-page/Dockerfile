FROM node:18.19 AS build

WORKDIR /app

# Copiar solo los archivos necesarios para el build
COPY package.json angular.json tsconfig*.json ./
COPY src/ ./src

# Instalar dependencias de forma reproducible
RUN npm ci

# Construir la aplicaci칩n en modo producci칩n
RUN npm run build -- --configuration production

FROM nginx:alpine
# Exponer el puerto donde Nginx sirve contenido est치tico
EXPOSE 80

# Copiar todos los archivos generados al directorio de Nginx
COPY --from=build /app/dist/status-page/ /usr/share/nginx/html/

# Configuraci칩n personalizada de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Arrancar Nginx en primer plano
CMD ["nginx", "-g", "daemon off;"]